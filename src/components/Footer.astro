import { RESUME_URL, EMAIL, TEL_HREF, TEL, FACEBOOK_URL, LINKEDIN_URL } from "../consts";

import Facebook from "./svg/Facebook.astro";
import LinkedIn from "./svg/LinkedIn.astro";

---

<footer>
    <div class="base_width">
        <div class="content">
            <p class="logo">
                Samit Patel
            </p>
            
            <p>An outright positive, trusted, and accomplished management professional with 18+ years global cross-sector experience.</p>
        </div>

        <nav>
            <a href="/"><span></span>Home</a>
            <a href="/events/"><span></span>Events</a>
            <a href="/blog"><span></span>Blog</a>
            <!-- <a href={RESUME_URL}><span></span>Resume</a> -->
            <a href="/contact/"><span></span>Contact</a>
        </nav>

        <div>
            <div class="nap_data">
                <a href={EMAIL}>{EMAIL}</a>
                <a href={TEL_HREF}>{TEL}</a>
                <p>London, UK</p>
                <p>United Kingdom</p>
            </div>

            <hr>
            
            <div class="social">
                <a href={FACEBOOK_URL} class="twitter icon" aria-label="Twitter link" target="_blank">
                    <Facebook/>
                </a>

                <a href={LINKEDIN_URL} class="linkedin icon" aria-label="LinkedIn link" target="_blank">
                    <LinkedIn/>
                </a>
            </div>
        </div>
    </div>
</footer>

<style>
    footer {
        background-color: var(--primary);
        color: var(--light);
        padding: clamp(4rem,19vw,8rem) 0;
        font-size: clamp(1rem,3.9vmin,1.7rem);
        line-height: 1.5;
        position: relative;
    }
    
    footer > .base_width {
        display: flex;
        flex-flow: row wrap;
        gap: clamp(3rem,4vw,18rem);
    }

    footer .content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        flex: 1;
        min-width: clamp(10rem, 50vw, 30rem);
    }

    footer .content .logo {
        font-size: 2.8rem;
        font-weight: 630;
        position: relative;
        display: flex;
        align-items: center;
    }

    footer .content p {
        max-width: 62rem;
        font-weight: 300;
        letter-spacing: 0.1rem;
        letter-spacing: 0.05rem;
        font-size: 1.8rem;
    }

    footer .legal {
        font-style: italic;
        color: var(--light-b);
        font-weight: 400;
    }

    footer nav {
        display: flex;
        flex-flow: row wrap;
        gap: 1.2rem 2rem;
        align-content: start;
    }

    footer nav a {
        display: flex;
        align-items: center;
        gap:1rem;
        font-weight: 300;
        letter-spacing: 0.06rem;
    }

    footer nav a span {
        display: block;
        width: 0.6rem;
        height: 0.6rem;
        transition: background-color 0.4s ease;
        background-color: var(--light);
    }

    footer nav a:hover span {
        transition: background-color 0s ease;
        background-color: var(--highlight);
    }

    .nap_data {
        font-weight: 400;
        font-size: 0.9em;
        letter-spacing: 0.1rem;
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
        color: var(--light-a);
    }

    .nap_data a, .nap_data p {
        opacity: 0.6;
    }

    .nap_data a {
        transition: opacity 0.4s ease;
    }

    .nap_data a:hover {
        opacity: 1;
        transition: opacity 0s ease;
    }

    hr {
        width: 2rem;
        margin: 2rem 0;
        height: 0.2rem;
        background-color: rgb(248 248 255 / 10%);
    }

    .social {
        display: flex;
        flex-direction: row;
        gap: 1.5rem;
    }

    .social a.icon {
        width: 2rem;
        height: 2rem;
    }



    
	@media screen and (min-width: 850px) {

        footer nav {
            flex-direction: column;
        }

        footer > .base_width {
            gap: clamp(3rem,10vw,18rem);
        }

        footer .legal {
            margin-top: 2rem;
        }

    }
</style>
